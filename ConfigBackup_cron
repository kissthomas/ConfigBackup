#!/bin/bash -e

################################################################################
#                                Configuration                                 #
################################################################################

SCRIPT=/opt/ConfigBackup/ConfigBackup.sh
LOG=/var/log/ConfigBackup.log

################################################################################
#                             Base Program Start                               #
################################################################################

[ -x $SCRIPT ] || exit 0

echo "**************************** STARTING CONFIG BACKUP ****************************" >> $LOG
echo "Start date: `date +"%F %T"`" >> $LOG
$SCRIPT >> $LOG 2>&1
echo "================================================================================" >> $LOG
echo "" >> $LOG
